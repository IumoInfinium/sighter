{
    "manifest_version" : 2,
    "version" : "1.0",

    "name" : "Sighter",
    "description": "Reminds you to take a break from your screen",
    
    "permissions" : [
        "alarms",
        "background",
        "notifications",
        "storage"
    ],
    
    "background": {
        "scripts": ["background.js"],
        "persistent" : false
    },
    "browser_action": {
        "default_popup" : "popup.html",
        "default_icon" : {
            "16" : "img/icon-16.png",
            "32" : "img/icon-32.png",
            "48" : "img/icon-48.png"
        }
    }
}